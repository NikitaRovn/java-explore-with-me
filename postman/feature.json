{
  "info": {
    "name": "Feature - Comments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add comment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/comments?eventId={{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{userId}}", "comments"],
          "query": [
            {
              "key": "eventId",
              "value": "{{eventId}}"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Cобытие!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update comment",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/comments/{{commentId}}",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{userId}}", "comments", "{{commentId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Обновленный комментарий\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Moderate comment",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/comments/{{commentId}}",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "comments", "{{commentId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"PUBLISHED\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get event comments",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/events/{{eventId}}/comments",
          "host": ["{{baseUrl}}"],
          "path": ["events", "{{eventId}}", "comments"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete comment",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/comments/{{commentId}}",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{userId}}", "comments", "{{commentId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 204', function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}